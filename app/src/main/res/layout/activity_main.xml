<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll0"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/p_700"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/appName"
        style="@style/tekstas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Percent counter" />

    <ImageView
        android:id="@+id/appLogo"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_marginTop="35dp"
        android:layout_marginBottom="35dp"
        android:layout_gravity="center"
        android:contentDescription="@string/app_name"
        android:src="@drawable/logo" />

    <EditText
        android:id="@+id/input"
        style="@style/inputStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/input_background"
        android:hint="Enter amount" />

    <TextView
        android:id="@+id/seekBarName"
        style="@style/tekstas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0%" />

    <SeekBar
        android:id="@+id/seekBar"
        style="@style/seekBarStyle"
        android:layout_width="match_parent"
        android:max="100"
        android:min="0"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tipName"
        style="@style/tekstas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tip" />

    <TextView
        android:id="@+id/tipValue"
        style="@style/tekstasSuFonu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="cia bus reiksme" />

    <TextView
        android:id="@+id/Total"
        style="@style/tekstas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Total" />

    <TextView
        android:id="@+id/totalValue"
        style="@style/tekstasSuFonu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="cia bus reiksme" />

    <TextView
        android:id="@+id/result"
        style="@style/result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="cia bus reiksme" />

    <TextView
        android:id="@+id/author"
        style="@style/authorText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Vardas Pavarde" />

</LinearLayout>
